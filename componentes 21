< de script >
exportação  padrão {
    métodos : {
    convertValue ( valor ) {
       valor de retorno . toLocaleString ( ' pt-BR ' , {estilo :  ' moeda ' , moeda :  ' BRL ' })
    },
    takeImage ( img ) {
return require ( ' @/assets/cupcakes/ ${ img } ' )
    },
    },
    calculado : {
    carrinho () {
      devolva  isso . $ loja . estado . carrinho
    }
  },
  criado () {
this.$store.dispatch('carrinho')
  }
}
